<h1>New Summary</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for summaries</p>
    <ul>
      <li>Don't try to be cute</li>
      <li>Keep em short</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for [@topic, @post, @summary] do |f| %>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter summary body" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
      <% end  %>
  </div>
</div>